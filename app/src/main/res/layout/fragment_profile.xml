<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- FragmentContainer for nested navigation -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nested_nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:navGraph="@navigation/nav_graph"
        app:defaultNavHost="false" />

    <!-- Main content layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ProfileFragment">

        <TextView
            android:id="@+id/frame_2"
            android:layout_width="177dp"
            android:layout_height="38dp"
            android:background="@drawable/discover_bar"
            android:clipToOutline="true"
            android:gravity="center_horizontal|top"
            android:text="@string/profile_page"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06999999" />

        <Button
            android:id="@+id/settingButton"
            android:layout_width="34.24dp"
            android:layout_height="35dp"
            android:background="@drawable/setting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/frame_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06999999" />

        <ImageView
            android:id="@+id/ivUserProfilePhoto"
            android:layout_width="126dp"
            android:layout_height="120dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/user_profile_photo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frame_2" />

        <TextView
            android:id="@+id/tvUserFirstName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Name will show here"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivUserProfilePhoto" />

        <Button
            android:id="@+id/preferenceButton"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:background="@drawable/black_button"
            android:text="@string/preference"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.877"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserFirstName"
            app:layout_constraintVertical_bias="0.066" />

        <Button
            android:id="@+id/editProfileButton"
            android:layout_width="150dp"
            android:layout_height="65dp"
            android:background="@drawable/black_button"
            android:text="@string/editProfile"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/preferenceButton"
            app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserFirstName"
            app:layout_constraintVertical_bias="0.066" />

        <Button
            android:id="@+id/tipCenter"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:background="@drawable/big_rectangle"
            android:text="@string/tipCenter"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/preferenceButton"
            app:layout_constraintHorizontal_bias="0.455"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserFirstName"
            app:layout_constraintVertical_bias="0.347" />

        <Button
            android:id="@+id/helpCeter"
            android:layout_width="150dp"
            android:layout_height="140dp"
            android:background="@drawable/big_rectangle"
            android:text="@string/helpCenter"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.877"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUserFirstName"
            app:layout_constraintVertical_bias="0.347" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
